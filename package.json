{
  "name": "metallic-interfaces",
  "version": "0.1.1",
  "description": "Common interfaces for metallic services",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/metallic-interfaces.git"
  },
  "keywords": [
    "interface",
    "metallic"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/metallic-interfaces/issues"
  },
  "homepage": "https://github.com/CartoDB/metallic-interfaces#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "metallic-errors": "^0.1.1"
  },
  "scripts": {
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "coverage": "istanbul cover _mocha lib/test/ -- --recursive",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "mocha --recursive -r babel-register -r source-map-support/register test/",
    "test:watch": "npm run test -- -w",
    "version": "git add -A CHANGELOG.md"
  },
  "devDependencies": {
    "babel-cli": "6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.23.0",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "sinon": "1.17.7",
    "source-map-support": "0.4.11",
    "standard": "9.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
